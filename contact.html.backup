</section>

<!-- Contact Form Section -->
<section class="form-section">
    <div class="form-header">
        <h2>Plan een gesprek</h2>
        <p>Vul onderstaand formulier in en we nemen zo spoedig mogelijk contact met u op.</p>
    </div>

    <form class="contact-form" action="#" method="POST">
        <div class="form-group">
            <label for="name">Naam *</label>
            <input type="text" id="name" name="name" placeholder="Uw volledige naam" required>
        </div>

        <div class="form-group">
            <label for="organization">Organisatie *</label>
            <input type="text" id="organization" name="organization" placeholder="Uw organisatie" required>
        </div>

        <div class="form-group">
            <label for="email">E-mail *</label>
            <input type="email" id="email" name="email" placeholder="uw.email@organisatie.nl" required>
        </div>

        <div class="form-group">
            <label for="phone">Telefoon</label>
            <input type="tel" id="phone" name="phone" placeholder="+31 6 12 34 56 78">
        </div>

        <div class="form-group">
            <label for="subject">Onderwerp *</label>
            <select id="subject" name="subject" required>
                <option value="">Selecteer een onderwerp</option>
                <option value="draagvlak">Draagvlak Onderzoek</option>
                <option value="strategie">Strategieontwikkeling</option>
                <option value="campagne">Campagne Uitvoering</option>
                <option value="training">Team Training</option>
                <option value="crisis">Crisis Management</option>
                <option value="keynote">Keynote Speaker Boeken</option>
                <option value="anders">Iets anders</option>
            </select>
        </div>

        <div class="form-group">
            <label for="message">Bericht *</label>
            <textarea id="message" name="message" placeholder="Beschrijf uw vraagstuk of verzoek..." required></textarea>
        </div>

        <button type="submit" class="submit-button">Verstuur bericht</button>
    </form>
</section>

<!-- Footer Minimal -->
<footer class="footer-minimal">
    <p>&copy; 2026 SATA - SUE & The Alchemists. Alle rechten voorbehouden.</p>
    <p>
        <a href="complete-site-grid.html">Terug naar home</a> |
        <a href="mailto:info@wearesata.com">info@wearesata.com</a>
    </p>
</footer>

<script>
function toggleMenu() {
    const overlay = document.getElementById('menuOverlay');
    overlay.classList.toggle('active');
}

// Close menu when clicking a link
document.querySelectorAll('.menu-content a').forEach(link => {
    link.addEventListener('click', () => {
        document.getElementById('menuOverlay').classList.remove('active');
    });
});

// Language buttons are now direct links with .active class styling

// Form submission (placeholder - replace with actual backend)
document.querySelector('.contact-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Bedankt voor uw bericht! We nemen zo spoedig mogelijk contact met u op.\n\n(Let op: Dit is een demo. Verbind met een backend voor echte verzending.)');
    // Here you would normally send the form data to your backend
});
</script>

